<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clipToOutline="true"
    android:background="@drawable/sign_in_ema">

    <TextView
        android:id="@+id/ranking"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFDA69"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/user_skin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/ranking"
        android:background="@drawable/skin1"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ranking_nickname"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/user_skin"
        android:background="@drawable/iamge"
        android:gravity="center"
        android:text="NICKNAME"
        android:textColor="#FFDA69"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>