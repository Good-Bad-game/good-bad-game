<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sign_in_ema"
        tools:context=".InGame">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout0"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    app:layout_constraintDimensionRatio="H,1:0.15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:text="남은시간 :"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="10dp"
                        android:text="00:00"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_marginStart="45dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.12">
                <Button
                    android:id="@+id/team1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/iamge"
                    android:text="팀1"
                    android:onClick="team1"
                    android:textColor="@color/yellow"
                    android:textSize="40dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_marginStart="195dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.12">

                <Button
                    android:id="@+id/team2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/iamge"
                    android:textColor="@color/yellow"
                    android:text="팀2"
                    android:onClick="team2"
                    android:textSize="40dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_marginStart="45dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37">

                <Button
                    android:id="@+id/team3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/iamge"
                    android:onClick="team3"
                    android:text="팀3"
                    android:textColor="@color/yellow"
                    android:textSize="40dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_marginStart="195dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37">
            <Button
                android:id="@+id/team4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/iamge"
                android:textColor="@color/yellow"
                android:text="팀4"
                android:onClick="team4"
                android:textSize="40dp"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_marginStart="45dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.62">
            <Button
                android:id="@+id/team5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/yellow"
                android:text="팀5"
                android:onClick="team5"
                android:textSize="40dp"
                android:background="@drawable/iamge" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_marginStart="195dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.62">
            <Button
                android:id="@+id/team6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/iamge"
                android:textColor="@color/yellow"
                android:text="팀6"
                android:onClick="team6"
                android:textSize="40dp"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:layout_constraintDimensionRatio="H,1:0.15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/end_meeting"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="520dp"
                android:background="@drawable/iamge"
                android:onClick="StrightVote"
                android:text="선택완료"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="35dp" />
            <TextView
                android:id="@+id/end_number"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="520dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/iamge"
                android:textAlignment="center"
                android:text="1"
                android:textColor="@color/yellow"
                android:textSize="35dp" />

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>