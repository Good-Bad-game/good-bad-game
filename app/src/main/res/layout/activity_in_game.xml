<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_ema"
    tools:context=".InGame">

    <TextView
        android:id="@+id/time_text"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="남은시간 :"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="20dp" />


    <Button
        android:id="@+id/team1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/iamge"
        android:text="팀1"
        android:onClick="team1"
        android:textColor="@color/yellow"
        android:textSize="40dp" />

    <Button
        android:id="@+id/team2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/iamge"
        android:textColor="@color/yellow"
        android:text="팀2"
        android:onClick="team2"
        android:textSize="40dp"
        />
    <Button
        android:id="@+id/team3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="210dp"
        android:textColor="@color/yellow"
        android:text="팀3"
        android:onClick="team3"
        android:textSize="40dp"
        android:background="@drawable/iamge"
        />

    <Button
        android:id="@+id/team4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/iamge"
        android:textColor="@color/yellow"
        android:text="팀4"
        android:onClick="team4"
        android:textSize="40dp"
        />
    <Button
        android:id="@+id/team5"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="360dp"
        android:textColor="@color/yellow"
        android:text="팀5"
        android:onClick="team5"
        android:textSize="40dp"
        android:background="@drawable/iamge" />

    <Button
        android:id="@+id/team6"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/iamge"
        android:textColor="@color/yellow"
        android:text="팀6"
        android:onClick="team6"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/end_meeting"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/iamge"
        android:onClick="StrightVote"
        android:text="회의종료"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/end_number"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/iamge"
        android:textAlignment="center"
        android:text="1"
        android:textColor="@color/yellow"
        android:textSize="35dp" />
</RelativeLayout>